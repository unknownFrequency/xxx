<% if user_signed_in? %>
  <% if  activity.key != "event.like" %>
    <%= render_activity(activity) %>

    <% if activity.trackable_type == "Event" %>
      <%= render_activity(activity) %>
    <% end %>

  <% end %>
<% end %>

<% if activity.trackable_type == "Post" && Post.find(activity.trackable_id).public && activity.key != "event.like" %>
  <%= render_activity(activity)  %>
<% end %>
