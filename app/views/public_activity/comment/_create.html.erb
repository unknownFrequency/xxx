<% if activity_resources_exist?(activity) %>
  <div id="activity-<%= activity.id %>" class="activity">
    <div class="activity-comment">
      <div class="info">
        <%= render 'shared/avatar', user: activity.owner %>
        <h4 class="name"><%= link_to activity.owner.name, user_path(activity.owner) %></h4>
        <%# <span class="action">kommenterede på en <%= link_to activity.trackable.commentable.class.to_s, activity.trackable.commentable %1></span> %>
        <span class="action">kommenterede på en 
          <% if activity.trackable.commentable.class.to_s == "Post" %>
            <%= link_to "Besked", activity.trackable.commentable %>
          <% elsif activity.trackable.commentable.class.to_s == "Event" %>
            <%= link_to "Begivenhed", activity.trackable.commentable %>
          <% end %>
        </span>
      </div>
      <div class="content">
        <h4><small><%= activity.trackable.comment_html %></small></h4>
      </div>
      <%= render 'shared/created_at', activity: activity %>
    </div>
  </div>
<% end %>
