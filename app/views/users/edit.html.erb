<div class="row">
  <div class="col-lg-6 col-lg-offset-3">
    <div class="well">
      <h3>Rediger Profil</h3>
      <%= form_for @user do |f| %>
        <div class="form-group">
          <%= f.label :avatar %>
          <br>
          <%= render 'shared/avatar', user: @user %>
          <br>
          <br>
          <%= f.file_field :avatar %>
        </div>
        <div class="form-group">
          <%= f.label "Baggrundsbillede" %>
          <br>
          <%= render 'shared/cover', user: @user %>
          <br>
          <%= f.file_field :cover %>
        </div>
        <div class="form-group">
          <%= f.label "Navn" %>
          <%= f.text_field :name, placeholder: 'Navn', class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label "Lidt om mig" %>
          <%= f.text_area :about, placeholder: 'Lidt om mig', class: 'form-control' %>
        </div>
        <%# <div class="form-group"> %>
        <%#   <%= f.label "Lidt om mig" %1> %>
        <%#   <%= f.text_field :location, placeholder: 'Location', class: 'form-control' %1> %>
        <%# </div> %>
        <div class="form-group">
          <%= f.label "Telefon" %>
          <%= f.text_field :phone_number, placeholder: 'Telefon', class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label 'Fødselsdag' %>
          <%= f.text_field :dob, placeholder: 'Fødselsdag', class: 'form-control' %>
        </div>
        <%# <div class="form-group"> %>
        <%#   <%= f.label :sex %1><br> %>
        <%#   <%= f.select :sex, options_for_seasons, class: 'form-control', prompt: 'Select One' %1> %>
        <%# </div> %>
        <div class="actions">
          <%= submit_tag 'Opdater', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
