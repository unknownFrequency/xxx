<p id="notice"><%= notice %></p>

<h1>Gallerier</h1>

<table>
  <tbody>
    <% @galleries.each_with_index do |gallery, i| %>
      <thead>
        <td><h3><%= gallery.title %></h3></td>
      </thead>

      <tr>
        <td><%= link_to image_tag(gallery.gallery_attachments[0].picture.thumb), gallery_path(gallery.id) %></td>
        <%# <td><%= image_tag gallery.gallery_attachments[0].inspect %1></td> %>
        <td><%= link_to 'Vis', gallery %></td>
        <td><%= link_to 'Rediger', edit_gallery_path(gallery) %></td>
        <td><%= link_to 'Slet', gallery, method: :delete, data: { confirm: 'Er du sikker?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nyt Galleri', new_gallery_path %>
